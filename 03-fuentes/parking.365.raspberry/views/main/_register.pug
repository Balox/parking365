extends layoutuser

block content
  form.form-horizontal(role='form', method='post', action='/register')
    
    .form-group
      label.col-md-3.control-label(for='username') Usuario
      .col-md-9
        input.form-control(type='text', name='username', placeholder='Usuario')

    .form-group
      label.col-md-3.control-label(for='passwd') Contraseña
      .col-md-9
        input.form-control(type='password', name='password', placeholder='Contraseña')

    .form-group
      label.col-md-3.control-label(for='password2') Confirmar Contraseña
      .col-md-9
        input.form-control(type='password', name='password2', placeholder='Contraseña')

    .form-group
      label.col-md-3.control-label(for='token') Token
      .col-md-9
        input.form-control(type='password', name='token', placeholder='Token de seguridad')

    .form-group
      // Button
      .col-md-offset-3.col-md-9
        button.btn.btn-primary(type='submit')
          i.icon-hand-right
          |  &nbsp Regístrate